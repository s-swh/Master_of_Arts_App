<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity.Add_Address">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:src="@mipmap/returnbutton"
            android:id="@+id/oncDestruction"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:layout_width="match_parent"
            android:text="添加收获地址"
            android:gravity="center"
            android:layout_height="@dimen/dp_30" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#3F3F3F3F"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:layout_width="wrap_content"
            android:text="收货人:"
            android:textSize="@dimen/sp_14"
            android:textColor="#000"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:hint="输入收货人姓名"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_85"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#3F3F3F3F"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:layout_width="wrap_content"
            android:text="联系方式:"
            android:textSize="@dimen/sp_14"
            android:textColor="#000"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:hint="输入联系号码"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_85"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#3F3F3F3F"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/harvestarea"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:layout_width="wrap_content"
            android:text="收获地区:"
            android:textSize="@dimen/sp_14"
            android:textColor="#000"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:hint="选择收货地区"
            android:id="@+id/txtvw"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_85"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:src="@mipmap/rightbut"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/dp_20" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#3F3F3F3F"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:layout_width="wrap_content"
            android:text="详细地址:"
            android:textSize="@dimen/sp_14"
            android:textColor="#000"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:hint="输入详细街道、楼栋号等"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_85"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#3F3F3F3F"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:layout_width="wrap_content"
            android:text="默认收货地址"
            android:textSize="@dimen/sp_14"
            android:textColor="#000"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_75"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#3F3F3F3F"
        android:layout_height="@dimen/dp_1"/>
    <Button
        android:layout_width="@dimen/dp_250"
        android:layout_gravity="center"
        android:text="确定添加"
        android:textColor="#fff"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/fillet4"
        android:layout_height="@dimen/dp_50" />
</LinearLayout>